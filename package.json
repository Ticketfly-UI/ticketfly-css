{
  "name": "ticketfly-css",
  "version": "0.0.3",
  "description": "Ticketfly's CSS framework",
  "main": "src/index.css",
  "style": "src/index.css",
  "keywords": [
    "css",
    "ticketfly css",
    "css framework",
    "composable css",
    "functional css",
    "modular css",
    "responsive css",
    "lightweight css"
  ],
  "repository": {
    "url": "https://github.com/Ticketfly-UI/ticketfly-css.git",
    "type": "git"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "src/index.css"
  ],
  "bugs": {
    "url": "https://github.com/Ticketfly-UI/ticketfly-css/issues"
  },
  "homepage": "https://github.com/Ticketfly-UI/ticketfly-css",
  "author": "Brian Sipple <@Brian_Sipple>",
  "license": "MIT",
  "engines": {
    "node": ">=6.5"
  },
  "dependencies": {
    "cssnano": "^3.9.1",
    "ticketfly-css-core-variables": "^0.0.1",
    "ticketfly-css-normalize": "^0.0.4",
    "ticketfly-css-overflow-utilities": "^0.0.1",
    "ticketfly-css-reset-garnishes": "^0.0.1",
    "ticketfly-css-sizing-utilities": "^0.0.1",
    "ticketfly-css-spacing-utilities": "^0.0.2",
    "ticketfly-css-spacing-variables": "^0.0.5"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "cssstats": "^3.0.0",
    "del-cli": "^0.2.1",
    "mocha": "^3.2.0",
    "postcss-calc": "^5.3.1",
    "postcss-cli": "^2.6.0",
    "postcss-color-function": "^2.0.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-discard-comments": "^2.0.4",
    "postcss-import": "^9.0.0",
    "postcss-importantly": "^0.0.7",
    "postcss-remove-root": "^0.0.2",
    "postcss-reporter": "^3.0.0",
    "stylelint": "^7.7.0",
    "stylelint-config-ticketfly": "^0.1.0"
  },
  "scripts": {
    "clean": "del build/**",
    "setup": "mkdir -p build",
    "transform": "postcss -c postcss.config.js",
    "transform:watch": "postcss -c postcss.config.js -w",
    "transform:lint": "postcss -c postcss.config.js -o build/lint.css && rm build/lint.css",
    "minify": "postcss -u cssnano build/ticketfly-css.css -o build/ticketfly-css.min.css",
    "important": "postcss -u postcss-importantly build/ticketfly-css.css -o build/ticketfly-css-important.css",
    "important:min": "postcss -u postcss-importantly -u cssnano build/ticketfly-css.css -o build/ticketfly-css-important.min.css",
    "custom-props": "postcss -u postcss-import -u postcss-custom-media src/index.css -o build/ticketfly-css-cp.css",
    "custom-props:min": "postcss -u postcss-import -u postcss-custom-media -u cssnano src/index.css -o build/ticketfly-css-cp.min.css",
    "build": "npm run clean && npm run transform",
    "test": "mocha test/**/*.spec.js",
    "prepublish": "npm run setup && npm run build && npm run important && npm run custom-props && npm run minify && npm run important:min && npm run custom-props:min"
  }
}
